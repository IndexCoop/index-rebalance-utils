{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@utils/*": ["utils/*"],
      "@typechain/*": ["typechain/*"],
    },
    "skipLibCheck": true,
  },
  "include": [
    "./test/**/*.ts",
    "./utils/**/*.ts",
    "./deploy/**/*.ts",
    "./typechain/**/*.ts",
    "./types/**/*.ts",
    "./tasks/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "files": [
    "hardhat.config.ts",
  ]
}